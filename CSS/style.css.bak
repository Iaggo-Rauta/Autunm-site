body {

margin: 0;

margin-top: 50px;

}

 

header {

display: flex;

position: fixed;

top: 0;

left: 0;

right: 0;

height: 50px;

line-height: 50px;

justify-content: space-evenly;

}

header * {
	
display: inline;

height: 50px;


}

nav{
	
justify-content: flex-end;
	
}

header ul {

padding: 0;

}
 

header li {

margin-left: 20px;
}

 

section {

height: 100vh;

border: 1px solid black;

display: flex;

justify-content: center;

align-items: center;

text-align: center;

}
 

footer {
	
text-align: center;

padding: 50px;

}

*{
	
color: #590202;	

background:#FAE4B4

}

